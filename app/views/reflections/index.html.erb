<p id="notice"><%= notice %></p>

<h1>Reflections</h1>

<table class="table table-striped table-bordered">
    <thead class="thead-inverse">
        <tr>
            <th>Id</th>
            <th>Student</th>
            <th>Problem</th>
            <th>Session</th>
            <th>Reflection</th>
            <th>Response timing</th>
        </tr>
    </thead>

    <tbody>
        <% @reflections.each do |reflection| %>
            <tr>
                <td><%= reflection.id %></td>
                <td><%= reflection.student_id %></td>
                <td><%= reflection.problem_id %></td>
                <td><%= reflection.session_id %></td>
                <td><%= reflection.reflection %></td>
                <td><%= reflection.response_timing %></td>
            </tr>
        <% end %>
    </tbody>
</table>

<br>

