<p id="notice"><%= notice %></p>

<h1>Reflections</h1>

<table>
  <thead>
    <tr>
      <th>Student</th>
      <th>Problem</th>
      <th>Session</th>
      <th>Reflection</th>
      <th>Response timing</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reflections.each do |reflection| %>
      <tr>
        <td><%= reflection.student_id %></td>
        <td><%= reflection.problem_id %></td>
        <td><%= reflection.session_id %></td>
        <td><%= reflection.reflection %></td>
        <td><%= reflection.response_timing %></td>
        <td><%= link_to 'Show', reflection %></td>
        <td><%= link_to 'Edit', edit_reflection_path(reflection) %></td>
        <td><%= link_to 'Destroy', reflection, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

